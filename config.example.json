{
  "matrix": {
    "server_url": "http://trix-server.local/display",
    "width": 64,
    "height": 32,
    "output_dir": "output"
  },
  "scheduler": {
    "mode": "simple_rotation",
    "default_display_duration": 30,
    "provider_rotation": [
      {
        "name": "time",
        "duration": 10
      },
      {
        "name": "weather",
        "duration": 30
      }
    ]
  },
  "providers": {
    "weather": {
      "enabled": true,
      "location": {
        "latitude": 40.0,
        "longitude": -80.0,
        "name": "Pittsburgh, PA"
      },
      "units": "fahrenheit",
      "forecast_interval_hours": 3,
      "cache_duration": 600,
      "aqi_enabled": true
    },
    "time": {
      "enabled": true,
      "timezone": "America/New_York",
      "format_12h": true
    }
  }
}
